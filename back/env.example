# ========================================
# B2B Agent Backend Environment Variables
# ========================================

# ========================================
# REDIS CONFIGURATION
# ========================================
# Redis connection URL (default: localhost:6379)
# REDIS_URL=redis://localhost:6379

# Individual Redis configuration (recommended for password auth)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_AUTH=1956

# Alternative Redis configurations:
# For Redis with password: redis://:password@localhost:6379
# For Redis with username and password: redis://username:password@localhost:6379
# For Redis Cloud: redis://username:password@host:port
# For Redis on different port: redis://localhost:6380

# ========================================
# HOTEL API CONFIGURATION
# ========================================
# Hotel API base URL
HOTEL_APIURL=https://api.hotels.com/v1

# Hotel API authentication key
HOTEL_APIAUTH=your_hotel_api_auth_key_here

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/b2b_agent

# Alternative MongoDB configurations:
# MongoDB with authentication: mongodb://username:password@localhost:27017/b2b_agent
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/b2b_agent

# ========================================
# JWT CONFIGURATION
# ========================================
# JWT secret key for token signing
JWT_SECRET=your_super_secret_jwt_key_here

# JWT token expiration time (in seconds)
JWT_EXPIRES_IN=86400

# ========================================
# SERVER CONFIGURATION
# ========================================
# Server port
PORT=3000

# Node environment
NODE_ENV=development

# ========================================
# EMAIL CONFIGURATION (if using nodemailer)
# ========================================
# SMTP host
SMTP_HOST=smtp.gmail.com

# SMTP port
SMTP_PORT=587

# SMTP username (email)
SMTP_USER=your_email@gmail.com

# SMTP password (app password for Gmail)
SMTP_PASS=your_app_password_here

# ========================================
# PAYMENT CONFIGURATION (if using CCAvenue)
# ========================================
# CCAvenue merchant ID
CCAVENUE_MERCHANT_ID=your_merchant_id

# CCAvenue access code
CCAVENUE_ACCESS_CODE=your_access_code

# CCAvenue working key
CCAVENUE_WORKING_KEY=your_working_key

# CCAvenue API URL
CCAVENUE_API_URL=https://test.ccavenue.com/transaction/transaction.do?command=initiateTransaction

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Upload directory
UPLOAD_DIR=./uploads

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================
# Rate limit window (in milliseconds)
RATE_LIMIT_WINDOW=900000

# Rate limit max requests per window
RATE_LIMIT_MAX=100

# ========================================
# CORS CONFIGURATION
# ========================================
# Allowed origins for CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ========================================
# LOGGING CONFIGURATION
# ========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ========================================
# CACHE CONFIGURATION
# ========================================
# Redis cache TTL for autosuggest (in seconds)
AUTOSUGGEST_CACHE_TTL=7200

# ========================================
# SECURITY CONFIGURATION
# ========================================
# bcrypt salt rounds
BCRYPT_SALT_ROUNDS=12

# Session secret
SESSION_SECRET=your_session_secret_here

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
# Enable debug mode
DEBUG=true

# Enable API documentation
ENABLE_API_DOCS=true

# ========================================
# PRODUCTION CONFIGURATION
# ========================================
# Enable HTTPS in production
FORCE_HTTPS=false

# Trust proxy (for load balancers)
TRUST_PROXY=false 