# ========================================
# B2B Agent Backend Environment Variables
# ========================================
# Copy this file to .env and update the values according to your setup
# cp env.example .env

# ========================================
# SERVER CONFIGURATION
# ========================================
# Server port (default: 3334)
PORT=3334

# Node environment (development, production, test)
NODE_ENV=development

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MongoDB connection string (supports both MONGODB_URI and MONGO_URI)
MONGODB_URI=mongodb://localhost:27017/b2b_agent

# Alternative MongoDB configurations:
# MongoDB with authentication: mongodb://username:password@localhost:27017/b2b_agent
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/b2b_agent
# MongoDB with options: mongodb://localhost:27017/b2b_agent?retryWrites=true&w=majority

# ========================================
# REDIS CONFIGURATION
# ========================================
# Redis connection URL (alternative to individual settings)
# REDIS_URL=redis://localhost:6379

# Individual Redis configuration (recommended for password auth)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_AUTH=1956

# Alternative Redis configurations:
# For Redis with password: redis://:password@localhost:6379
# For Redis with username and password: redis://username:password@localhost:6379
# For Redis Cloud: redis://username:password@host:port
# For Redis on different port: redis://localhost:6380

# ========================================
# HOTEL API CONFIGURATION
# ========================================
# Hotel API base URL
HOTEL_APIURL=https://api.hotels.com/v1

# Hotel API authentication key
HOTEL_APIAUTH=your_hotel_api_auth_key_here

# ========================================
# JWT CONFIGURATION
# ========================================
# JWT secret key for token signing (REQUIRED for authentication)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# JWT token expiration time (in seconds, default: 24 hours)
JWT_EXPIRES_IN=86400

# ========================================
# SECURITY CONFIGURATION
# ========================================
# bcrypt salt rounds for password hashing
BCRYPT_SALT_ROUNDS=12

# Session secret for session management
SESSION_SECRET=your_session_secret_here_change_this_in_production

# ========================================
# CORS CONFIGURATION
# ========================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================
# Rate limit window (in milliseconds, default: 15 minutes)
RATE_LIMIT_WINDOW=900000

# Rate limit max requests per window (default: 100 requests)
RATE_LIMIT_MAX=100

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
# Maximum file size for uploads (in bytes, default: 5MB)
MAX_FILE_SIZE=5242880

# Allowed file types (comma-separated MIME types)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Upload directory path
UPLOAD_DIR=./uploads

# ========================================
# EMAIL CONFIGURATION (Nodemailer)
# ========================================
# SMTP host (e.g., Gmail, Outlook, custom SMTP)
SMTP_HOST=smtp.gmail.com

# SMTP port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP username (email address)
SMTP_USER=your_email@gmail.com

# SMTP password (app password for Gmail, regular password for others)
SMTP_PASS=your_app_password_here

# ========================================
# PAYMENT CONFIGURATION (CCAvenue)
# ========================================
# CCAvenue merchant ID
CCAVENUE_MERCHANT_ID=your_merchant_id

# CCAvenue access code
CCAVENUE_ACCESS_CODE=your_access_code

# CCAvenue working key
CCAVENUE_WORKING_KEY=your_working_key

# CCAvenue API URL (test/production)
CCAVENUE_API_URL=https://test.ccavenue.com/transaction/transaction.do?command=initiateTransaction

# ========================================
# CACHE CONFIGURATION
# ========================================
# Redis cache TTL for autosuggest (in seconds, default: 2 hours)
AUTOSUGGEST_CACHE_TTL=7200

# ========================================
# LOGGING CONFIGURATION
# ========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
# Enable debug mode
DEBUG=true

# Enable API documentation
ENABLE_API_DOCS=true

# ========================================
# PRODUCTION CONFIGURATION
# ========================================
# Enable HTTPS in production
FORCE_HTTPS=false

# Trust proxy (for load balancers, reverse proxies)
TRUST_PROXY=false

# ========================================
# OPTIONAL CONFIGURATIONS
# ========================================
# Custom API base path (if not using root)
# API_BASE_PATH=/api/v1

# Custom static files path
# STATIC_PATH=./public

# Custom session store (memory, redis, mongo)
# SESSION_STORE=memory

# ========================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# ========================================
# Uncomment and modify these for different environments

# Development overrides
# NODE_ENV=development
# PORT=3334
# DEBUG=true

# Production overrides
# NODE_ENV=production
# PORT=80
# DEBUG=false
# FORCE_HTTPS=true
# TRUST_PROXY=true

# Test overrides
# NODE_ENV=test
# PORT=3335
# MONGODB_URI=mongodb://localhost:27017/b2b_agent_test 