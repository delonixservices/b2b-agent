# ========================================
# REDIS CONFIGURATION - MINIMAL SETUP
# ========================================

# Individual Redis configuration (recommended for password auth)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_AUTH=1956

# Alternative configurations:
# Basic Redis connection (no authentication)
# REDIS_URL=redis://localhost:6379

# Redis with password
# REDIS_URL=redis://:your_password@localhost:6379

# Redis with username and password
# REDIS_URL=redis://username:password@localhost:6379

# Redis on different port
# REDIS_URL=redis://localhost:6380

# Redis Cloud (example)
# REDIS_URL=redis://username:password@host.redis.cloud:port

# ========================================
# REQUIRED FOR HOTEL API
# ========================================
HOTEL_APIURL=https://api.hotels.com/v1
HOTEL_APIAUTH=your_hotel_api_auth_key_here

# ========================================
# BASIC SERVER CONFIG
# ========================================
PORT=3000
NODE_ENV=development 